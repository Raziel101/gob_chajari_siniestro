<odoo>

    <!-- AcciÃ³n -->
    <record id="action_personas" model="ir.actions.act_window">
        <field name="name">Personas</field>
        <field name="res_model">gob_chajari.siniestro.persona</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vista Lista -->
    <record id="view_persona_tree" model="ir.ui.view">
        <field name="name">persona.tree</field>
        <field name="model">gob_chajari.siniestro.persona</field>
        <field name="arch" type="xml">
            <list>
                <field name="nombre"/>
                <field name="dni"/>
                <field name="estado_civil"/>
                <field name="licencia"/>
            </list>
        </field>
    </record>

    <!-- Vista Formulario -->
    <record id="view_persona_form" model="ir.ui.view">
        <field name="name">persona.form</field>
        <field name="model">gob_chajari.siniestro.persona</field>
        <field name="arch" type="xml">
            <form string="Persona">
                <sheet>

                    <group>
                        <field name="nombre"/>
                        <field name="dni"/>
                        <field name="fecha_nacimiento"/>
                        <field name="edad"/>
                    </group>

                    <group>
                        <field name="estado_civil"/>
                        <field name="licencia"/>
                    </group>

                    <notebook>
                        <page string="Siniestros">
                            <field name="participacion_ids">
                                <list>
                                    <field name="siniestro_id"/>
                                    <field name="rol"/>
                                    <field name="vehiculo"/>
                                    <field name="dominio"/>
                                    <field name="tipo_vehiculo"/>
                                    <field name="lesiones"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                    <!-- CHATTER -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>

                </sheet>
            </form>
        </field>
    </record>

</odoo>
